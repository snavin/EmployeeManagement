@model EmployeeCreateViewModel
@*@model Employee*@
@*@inject IEmployeeRepository _empRepository*@

@{
    ViewBag.Title = "Create Employee";
}

<form enctype="multipart/form-data" method="post" asp-controller="Home" asp-action="Create" class="mt-3">
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Department" class="col-sm-2 col-form-label">Department</label>
        <div class="col-sm-10">
            <select asp-for="Department" class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<Dept>()">

                <option value="">Select Option</option>
            </select>
            <span asp-validation-for="Department" class="text-danger"></span>

        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input multiple asp-for="Photo" class="form-control custom-file-input" />
                <label class="custom-file-label">Choose File...</label>
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit">Create</button>
        </div>
    </div>
    @*<div class="form-group row">
            <div class="col-sm-10">
                Employee Count : @_empRepository.GetAllEmployees().Count()
            </div>
        </div>*@

